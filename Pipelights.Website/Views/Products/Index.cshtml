    }

        .btn-cart-main:hover {
            background: #F0B250;
            border-color: #F0B250;
            opacity:initial;
        }

        .btn-cart-main:focus {
            outline: none;
        }

    .product-item {
    }

        .product-item:hover {
            opacity: .8;
        }


</style>

