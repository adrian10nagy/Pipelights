@model IEnumerable<Pipelights.Website.BusinessService.Models.ProductDetailsDto>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <h4>S-ar putea sa-ti placa si</h4>
    <br />
    
            <div style="display:flex; justify-content:space-around" >
                @foreach (var lampEntity in Model)
                {
                    <div class="col-3">
               
                            <div class="product-item">
                                <a href="~/Products/Details?Id=@lampEntity.Id">
                                    <img src="@lampEntity.MainImage" alt="">
                                    <div style="padding:10px!important" class="down-content">
                                        <h4 style="margin-bottom:0px!important; color:#212529; font-size:12px!important">@lampEntity.Name</h4>
                                        <p style="margin-bottom:0px!important; font-size:12px!important">@lampEntity.Price RON</p>
                                    </div>
                                </a>
                            </div>
                
               
                    </div>
                }
           
             </div>
    
     
