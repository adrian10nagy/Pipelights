@model IEnumerable<Pipelights.Website.BusinessService.Models.ProductDetailsDto>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
    .product-item {
        width: 22%;
        box-sizing: border-box;
        text-align: center;
    }

    .product-item img {
        width: 100%;
    }

    .product-item h4,
    .product-item p {
        margin: 0;
        font-size: 12px;
    }

    @@media (max-width: 767px) {
        /* Small screens */
        .product-item {
            width: 50%;
        }
    }
</style>

<h4>S-ar putea să-ți placă și</h4>
<br />

<div style="display: flex; justify-content: space-around; flex-wrap: wrap;">
    @foreach (var lampEntity in Model)
    {
        <div class="product-item">
            <a href="~/Products/Details?Id=@lampEntity.Id">
                <img src="@lampEntity.MainImage" alt="">
                <div style="padding: 10px!important;" class="down-content">
                    <h4 style="margin-bottom: 0px!important; color: #212529;">@lampEntity.Name</h4>
                    <p style="margin-bottom: 0px!important;">@lampEntity.Price RON</p>
                </div>
            </a>
        </div>
    }
</div>
